<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@color/colorBackgroundBlue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/bg_roundall">

        <ImageView
            android:id="@+id/searchCover"
            android:layout_width="70dp"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/searchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/searchCover"
            android:fontFamily="@font/athiti_semibold"
            android:text="@string/search_title"
            android:textColor="#000000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/searchAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchTitle"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/searchCover"
            android:fontFamily="@font/athiti_medium"
            android:text="@string/search_author"
            android:textColor="#000000"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>