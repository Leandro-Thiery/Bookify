<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <TextView
        android:id="@+id/welcomedescRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeRegister"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/athiti"
        android:text="Let's create a new account"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/welcomeRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/athiti_bold"
        android:text="Welcome!"
        android:textColor="@color/colorWhite"
        android:textSize="35sp" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtTxtEmail"
        android:layout_alignStart="@+id/edtTxtPass"
        android:layout_alignEnd="@+id/edtTxtPass"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/button_darkblue"
        android:fontFamily="@font/athiti"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtTxtPass"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTxtName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/athiti"
        android:hint="@string/text_password"
        android:inputType="textPersonName|textPassword"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtTxtEmail"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTxtPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/athiti"
        android:hint="@string/text_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtTxtName"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomedescRegister"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/athiti"
        android:hint="@string/text_name"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>